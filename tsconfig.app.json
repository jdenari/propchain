{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        // enable Node-style module resolution 
        "moduleResolution": "node",

        // allow absolute imports from 'src/'
        "baseUrl": "./src",

        // define path alias '@types' for 'src/types' folder
        "paths": {
            "@types": ["types"]
        },

        // allow default imports from CommonJS modules like React
        "allowSyntheticDefaultImports": true,

        // automatically create default imports for CommonJS modules
        "esModuleInterop": true,

        // core module config
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",

        // lint rules
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"]
}
